<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.tech.embdes.embdesdemo.GraphView">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5">

    <RelativeLayout
        android:id="@+id/fromdate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/to"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="From"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_calender" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calender"
        android:layout_marginTop="26dp"
        android:text="To"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/calender1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/calender"
        android:src="@drawable/ic_calender" />

    <TextView
        android:id="@+id/fromDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/from"
        android:textSize="18sp"
        android:layout_marginStart="74dp"
        android:layout_toEndOf="@+id/from"
        android:text="TextView" />

    <TextView
        android:id="@+id/toDateView"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fromDateView"
        android:layout_alignTop="@+id/to"
        android:text="TextView" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        android:text="Ok"
        android:layout_below="@id/calender1"/>
    </RelativeLayout>
</ScrollView>
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/graphview" />

</LinearLayout>
